<!DOCTYPE html>
<html lang="en">
<head>
  
    <title>Todo list</title>
    <link href="css/styles.css" rel="stylesheet" >
</head>
<body>
    <div class="box">
        <h1>TODO LIST</h1>
    </div>
    <div class="box">
        <% io.forEach(function(items){%>
            <form action="/delete" method="POST">
                <div class="item">
                    <input type="checkbox" name="checkbox1" value="<%= items._id %>" onchange="this.form.submit()">
                <p><%= items.name %></p>
            </div>
            </form>
           
        <% }) %>
          
     
    <form action="/" method="POST">
        <input type="text" name="ele1" placeholder="Enter the task">
        <button type="submit">+</button>
    </form>
    </div>
</body>
</html>